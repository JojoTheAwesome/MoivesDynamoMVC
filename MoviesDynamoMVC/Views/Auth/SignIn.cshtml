@model  MoviesDynamoMVC.Models.SignInModel

@if (!ViewContext.ModelState.IsValid) {
    <div asp-validation-summary="All" class="form-validation"></div>
}

<form class="form-signin" asp-action="SignIn">
    <h2>Please sign in</h2>
    <label class="sr-only">Username</label>
    <input type="text" class="form-control" placeholder="Username" asp-for="Username"/>
    <label class="sr-only">Password</label>
    <input type="password" class="form-control" palceholder="Password" asp-for="Password"/>
    <button class="btn btn-lg btn-primary btn-block" id="SignInButton">Sign In</button>
</form>
